   ////  File:         /admin/inc/insert.php                                      ////  Language:     PHP 4.3                                                    ////                                                                           ////  Description:  Functions to insert new words into database                ////                                                                           ////  Author:       Francisco Garcia Rodriguez <kalahan@users.berlios.de>      ////                                                                           ////  $Id: index.php 10 2005-07-20 16:21:39Z Kalahan $//  ------------------------------------------------------------------------ ////// Insert word into dictionary// // Parameters://     $data    $data vector with from data//function InsertWord($data){    // Collecting data    $datein      = date(YmdHi);    $word        = trim($data['word']);    $translation = trim($data['translation']);    $notes_word  = $data['tip_word'];    $notes_trans = $data['tip_trans'];    $type        = $data['type'];    // Genre guess (German only so far)    if      ( ereg("^der",$word) )        $genre = "masculin";    elseif  ( ereg("^die",$word) )        $genre = "femenin";    elseif  ( ereg("^das",$word) )        $genre = "neutrum";    else        $genre = NULL;        // Apply data    $sql = "insert into lang_german (datein,word,translation,tip_word,                tip_trans,genre,type)             values ($datein, '$word', '$translation', '$notes_word',                 '$notes_trans', '$genre', '$type')";    mysql_query($sql) or Error( "Error from database: ".mysql_error() );    // Checks on operation    if (mysql_affected_rows() == 0)        Error('msg',"<p>Something went wrong, no data afected</p>".$sql);    else        return '<p>The word <font color="#00FF00">'.            $data['word'] . '</font> has been added</p><br>';}?>